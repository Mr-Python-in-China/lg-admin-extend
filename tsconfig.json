{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "allowArbitraryExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "luogu-api": ["./luogu-api-docs/luogu-api"],
      "asserts": ["./asserts/*"]
    }
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
